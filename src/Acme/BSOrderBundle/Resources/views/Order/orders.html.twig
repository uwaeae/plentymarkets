{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('/css/orders.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}


{% block javascripts %}
    <script src=" http://code.jquery.com/jquery-1.7.2.js" type="text/javascript"></script>
    <script src="{{ asset('/js/orders.js') }}" type="text/javascript"></script>
{% endblock %}



{% block title %}Auftragsbearbeitung{% endblock %}


{% block body %}

<div id="title"> Aufträge Status {{state}} zur Kommisonierung</div>
<form action="{{ path('BSOrder_print') }}" method="post" >

<div id="menu2">

    <ul class="buttons">
        <li>  <input class="button" type="submit" value="Sammeldruck erstellen" />
        </li>

        <li><a class="button" href="{{ path('BSOrder_state') }}" >zurück</a></li>

    </ul>

</div>


<div>

<table class="table_orders">
            <thead>
                <tr>
                    <th>
                        Packliste
                    </th>
                    <th>
                        Auftragsnummer
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Auftragswert
                    </th>
                    <th>
                        Geändert
                    </th>
                </tr>
            </thead>

            <tbody>
            {% for order in orders %}
            <tr>
                <td rowspan="2">
                    <input type="checkbox" name="ID{{order.head.getOrderID}}" value="{{order.head.getOrderID}}">
                </td>

                <td rowspan="2" class="Order_NO">
               {{order.head.getOrderID}}
              </td>
                <td rowspan="1">
                    {{order.head.getOrderStatus| number_format(2, ',', '.') }}

               </td>
                <td class="Order_Name">
                    {{order.head.getFirstName}}  {{order.head.getLastname}}
                </td>
                <td>
                    {{order.head.getTotalBrutto| number_format(2, ',', '.') }} &euro;
                </td>
                <td>
                    {{order.head.getLastUpdate |date("d.m.Y")}}
                </td>

            </tr>
            <tr>

                <td colspan="1">
                    {{order.head.getOrderType}}
                </td>
                <td colspan="3">
                    <div>
                        <a class="order_items_view " href="javascript:none;"> Details</a>
                        <table class="order_items">
                            {% for item in order.items %}
                            <tr>
                            <td>
                               {{item.getQuantity}}
                            </td>
                            <td>
                               {{item.getArticleCode}}
                            </td>


                                <td>
                               {{item.getItemText}}
                            </td>
                            <td>
                                {{item.getPrice | number_format(2, ',', '.') }} &euro;
                            </td>
                            </tr>



                            {% endfor %}
                        </table>

                    </div>

                </td>
            </tr>

            {% endfor %}
            </tbody>






        </table>


</div>

</form>





{% endblock %}