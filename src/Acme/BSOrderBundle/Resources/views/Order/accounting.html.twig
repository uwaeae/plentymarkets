{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('/css/orders.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}


{% block javascripts %}
    <script src=" http://code.jquery.com/jquery-1.7.2.js" type="text/javascript"></script>
    <script src="{{ asset('/js/orders.js') }}" type="text/javascript"></script>
{% endblock %}


{% block title %}Buchhaltung - Export - Lexware{% endblock %}


{% block body %}

<form action="{{ path('BSOrder_print') }}" method="post" >
<div id="title"> Buchhaltung - Export - Lexware </div>





        <table class="table_orders">
            <thead>
                <tr>
                    <th>
                        Packliste
                    </th>
                    <th>
                        Auftragsnummer
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Auftragswert
                    </th>
                    <th>
                        Geändert
                    </th>
                </tr>
            </thead>

            <tbody>
            {% for order in orders %}
            <tr>
                <td >
                    <input type="checkbox" name="ID{{order.getOrderID}}" value="{{order.getOrderID}}">
                </td>

                <td  class="Order_NO">
               {{order.getOrderID}}
              </td>
                <td >
                    {{order.getOrderStatus| number_format(2, ',', '.') }}
               </td>
                <td class="Order_Name">
                    {{order.getFirstName}}  {{order.getLastname}}
                </td>
                <td>
                    {{order.getTotalBrutto| number_format(2, ',', '.') }} &euro;
                </td>
                <td>
                    {{order.getPaymentID }}
                </td>
                <td>
                    {{order.getInvoiceNumber }}
                </td>
                <td>
                    {{order.getPicklist }}
                </td>
                <td>
                    {{order.getLastUpdate |date("d.m.Y")}}
                </td>

            </tr>


            {% endfor %}
            </tbody>


        </table>
<div class="navigation">



    {{ orders.render()|raw }}

    <ul class="buttons">
        <li>
            <input type="submit" value="EXPORT" />

        </li>
        <li><a class="button" href="{{ path('BSData_mainmenu') }}" >zurück</a></li>

    </ul>

</div>


</form>




        {% endblock %}