{% extends '::base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/yaml/core/base.min.css" type="text/css"/>
    <link rel="stylesheet" href="/css/yaml/screen/typography.css" type="text/css"/>
    <link rel="stylesheet" href="/css/yaml/navigation/vlist.css" type="text/css"/>
    <link rel="stylesheet" href="/css/style.css" type="text/css"/>
    <link rel="stylesheet" href="/css/yaml/forms/gray-theme.css" type="text/css"/>
{% endblock %}


{% block javascripts %}
    <script src=" http://code.jquery.com/jquery-1.7.2.js" type="text/javascript"></script>

{% endblock %}


{% block title %}Buchhaltung - Prüfung- Lexware{% endblock %}


{% block body %}


    <header>
        <div class="ym-wrapper" >
            <div  class="ym-wrapper"id="title"> <h1>Buchhaltung - Prüfung - Lexware </h1></div>
        </div>
    </header>

<div class="ym-column">
    <div class="ym-col3">
        <div class="ym-cbox">
            <nav class="ym-vlist">
                <ul class="buttons">
                    <li><a  href="{{ path('BSOrder_accounting') }}" >Buchhaltung - Export</a></li>
                    <li><a  href="{{ path('BSOrder_accounting') }}" >Buchhaltung - Export</a></li>
                    <li><a  href="{{ path('BSData_mainmenu') }}" >Hauptmenu</a></li>
                </ul>
           </nav>
        </div>
    </div>



    <div class="ym-col1">
        <div class="ym-cbox">

            <table class="bordertable">
                <thead>
                    <tr>
                        <th></th>
                    </tr>
                </thead>
                <tbody>


            {% for order in orders %}
                    <tr>
                        <td>{{ order }}</td>
                    </tr>
            {% endfor %}

                </tbody>
            </table>
        </div>

        {% if booking %}
        <div class="ym-cbox">

            <table class="bordertable">
                <thead>
                <tr>
                    <th>Buchungstext</th>
                    <th>Betrag</th>
                    <th>Haben</th>
                    <th>Soll</th>
                    <th>Buchungsdatum</th>
                    <th>Eingabedatum</th>
                    <th>Währung</th>
                </tr>
                </thead>
                <tbody>
            {% for book in  booking %}
            <tr>
                <td>{{ book.0 }}</td>
                <td>{{ book.1 }}</td>
                <td>{{ book.2 }}</td>
                <td>{{ book.3 }}</td>
                <td>{{ book.4 }}</td>
                <td>{{ book.5 }}</td>
                <td>{{ book.6 }}</td>
            </tr>
            {% endfor %}

        </div>
        {% endif %}
    </div>
</div>

{% endblock %}