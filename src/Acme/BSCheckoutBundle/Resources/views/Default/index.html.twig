
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>KASSE</title>
    {% block javascripts %}
        <script src="{{ asset('/js/jquery-1.9.0.js') }}"></script>
        <script src="{{ asset('/js/jquery-ui-1.10.0.custom.js') }}"></script>
        <script src="{{ asset('/js/jquery.printPage.js') }}" type="text/javascript"></script>
        <script src="{{ asset('/ckeditor/ckeditor.js') }}"></script>
        <script src="{{ asset('/js/checkout.js') }}" type="text/javascript"></script>

    {% endblock %}

    {% block stylesheets %}

        <link rel="stylesheet" href="/css/yaml/core/base.min.css" type="text/css"/>
        <link rel="stylesheet" href="/css/yaml/screen/typography.css" type="text/css"/>
        <link rel="stylesheet" href="/css/yaml/navigation/hlist.css" type="text/css"/>

        <link rel="stylesheet" href="/css/yaml/forms/gray-theme.css" type="text/css"/>
        <link href="/css/south-street/jquery-ui-1.10.0.custom.css" rel="stylesheet">
        <link rel="stylesheet" href="/css/style.css" type="text/css"/>

    {% endblock %}



    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>




{% block body %}
    <div class="ym-wrapper">

        <div class="ym-column">
            <div class="ym-col1">
                <div >
                <img  width="220px"  alt="Blumenschule Logo" src="/images/logo_blumenschule.png">



                <ul class="Payment_Buttons" >
                        <li>
                            <form action="{{ path('BSCheckout_clear', { 'cashbox_id': cashbox.id }) }}" method="post">
                                <button class="ym-button">CLEAR</button>
                            </form>
                        </li>
                        <li>
                            <a href="{{ path('BSCheckout_history', { 'cashbox_id': cashbox.id , 'date': "now"  }) }}" class="ym-button">History</a>
                        </li>
                        <li>
                            <a href="{{ path('checkout_cashbox_show', { 'id': cashbox.id  }) }}" class="ym-button">Konfiguration</a>
                        </li>

                    </ul>

                </div>

                <div class="ym-cbox">


                    <div class="shopinglist">
                        <table >
                            <thead>

                            <tr>
                                <th> Pos</th>
                                <th>Menge</th>
                                <th>Bezeichung</th>
                                <th>MwSt</th>
                                <th>Preis</th>
                               <!-- <th>PA</th> -->
                                <th>Summe</th>
                            </tr>
                            </thead>
                            <tbody class="co_items">
                            {% for item in basket.checkoutItems %}
                                <tr data-sum="{{ (item.quantity * item.price) }}">
                                    <td>{{ loop.index }}</td>

                                    <td><input class="iteminput" value="{{ item.quantity }}" data-id="{{ item.id }}"></td>
                                        <!--<div class="itemEdit">
                                           <a href="#" data-action="minus" data-id="{{ item.id }}"><img src="{{ asset('images/icons/arrow-down.png') }}" alt="- Menge" /></a>
                                           <a href="#" data-action="plus" data-id="{{ item.id }}"><img src="{{ asset('images/icons/arrow-up.png') }}" alt="+ Menge" /></a>
                                        </div>-->



                                    <td>{{ item.description }}</td>
                                    <td>{{ item.VAT }}%</td>
                                    <td>
                                        <input class="itemprice" value="{{ item.price|number_format(2, '.', ',')  }}" data-id="{{ item.id }}" >
                                    </td>
                                    <!-- <td></td> -->
                                    <td>{{ (item.quantity * item.price)|number_format(2, '.', ',')  }}  &euro;
                                        <div class="itemEdit">
                                            <a href="#" data-action="delete" data-id="{{ item.id }}"><img src="{{ asset('images/icons/remove2.png') }}" alt="Löschen" /></a>

                                        </div>
                                    </td>

                                </tr>


                            {% endfor %}
                            </tbody>
                        </table>

                    </div>


                    <div id="printPage" name="printPage"  style="position:absolute;top:-9999px;left:-9999px;border:0px;overflow:none; z-index:-1"></div>
                    <div class="toPaydialog" title="Bezahlen">
                        Betrag
                        <div class="co_toPay">

                        </div>
                        Bezahlt
                        <input type="text" class="co_payed" >
                        Rückgeld
                        <div class="co_return">

                        </div>
                        <div>
                            <form action="{{ path('BSCheckout_finish', { 'cashbox_id': cashbox.id,}) }}" method="post">
                                <input type="hidden" name="cashbox_id" value="{{ cashbox.id}}">
                                <input type="hidden" name="payment_id" value="11">
                                <button class="ym-button return_focus" >Bar</button>
                            </form>
                            <form action="{{ path('BSCheckout_finish', { 'cashbox_id': cashbox.id,}) }}" method="post">
                                <input type="hidden" name="cashbox_id" value="{{ cashbox.id}}">
                                <input type="hidden" name="payment_id" value="11">
                                <button class="ym-button" >EC</button>
                            </form>
                        </div>


                        <div class="co_receipt" >

                            <form class="bontext" action="{{ path('BSCheckout_receipt', { 'cashbox_id': cashbox.id,'id': basket.id,}) }}" method="post">
                                <button class="ym-button receipt btnPrint">Quittung</button>
                                <input type="hidden" name="cashbox_id" value="{{ cashbox.id}}">
                                <label for="bontext">Adresse</label>
                                <textarea   name="bontext" id="bontext" >{{ basket.bontext }}</textarea>
                            </form>


                        </div>



                    </div>

                    <div class="toReceipt">

                    </div>


                    <ul class="Payment_Buttons">
                        <li>
                            <label for="inputkeyboard">Eingabe:</label>
                            <input type="text" id="inputkeyboard" class="inputkeyboard" data-cashbox="{{ cashbox.id }}">
                        </li>
                        <li>
                            <button class="toPay ym-button">Bezahlen</button>
                        </li>
                        <li>

                            <button class="order ym-button">Rechung</button>
                            <div class="orderdialog" title="Rechnung erstellen" >
                                <form action="{{ path('BSCheckout_order', { 'cashbox_id': cashbox.id,}) }}" method="post">
                                    {{ form_widget(form) }}
                                    <button class="ym-button" >Erstellen</button>
                                </form>

                            </div>
                        </li>
                        <li>
                            <button class="ym-button pflege" >Pflegeanleitung</button>
                        </li>


                    </ul>


                </div>
            </div>

            <div class="ym-col2">
                <div class="ym-cbox ">




                    <div class="co_result">
                        Betrag
                        <div class="co_toPay">

                        </div>
                    </div>

                        <div class="input_buttons">
                            {% for key,item in quickbuttons %}


                                <div class="checkout-box" data-code="{{ item.code }}" data-keyboard="{{ item.quickkey}}">
                                    {{ item.name }}
                                </div>

                            {% endfor %}
                        </div>








                </div>
            </div>
        </div>

    </div>

{% endblock %}



</body>
</html>
