
{% extends '::base.html.twig' %}
{% block title %}Buchhaltung - Zahlungsmethoden{% endblock %}


{% block javascripts %}
<script src="{{ asset('/js/jquery.js') }}" type="text/javascript"></script>

{% endblock %}



{% block body %}


<h1>PaymentMethods</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.Name }}</td>
        </tr>
        <tr>
            <th>Debitor</th>
            <td>{{ entity.Debitor }}</td>
        </tr>
        <tr>
            <th>Bankaccount</th>
            <td>{{ entity.BankAccount }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('BSData_paymentmethods') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('BSData_paymentmethods_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('BSData_paymentmethods_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>

{% endblock %}
