{# src/Acme/SecurityBundle/Resources/views/Security/login.html.twig #}
{% extends '::base.html.twig' %}

{% block stylesheets %}
{{ parent() }}
<link href="{{ asset('/css/login.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block title %}Die GÃ¤rtner der Blumenschule - Login{% endblock %}


{% block body %}

<div id="login">

{% if error %}
<div>{{ error.message }}</div>
{% endif %}

<form action="{{ path('login_check') }}" method="post">
    <div class="ym-fbox-text">
        <label for="username">Benutzer</label>
        <input type="text" name="_username" id="username" size="20" value="{{ last_username }}" />
    </div>
    <div class="ym-fbox-text">
        <label for="password">Kennwort</label>
        <input type="password" name="_password" id="password" size="20" value="{{ last_username }}" />
    </div>

    <div class="ym-fbox-button">
        <input type="submit" class="ym-button" value="Login" id="submit" name="Login" />
    </div>

    <input type="hidden" name="_target_path" value="/" />
</form>
</div>


{% endblock %}