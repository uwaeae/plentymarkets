
{% extends '::base.html.twig' %}
{% block title %}INTERN - Waren{% endblock %}


{% block javascripts %}
    <script src="{{ asset('/js/jquery.js') }}" type="text/javascript"></script>
    <script src="{{ asset('/js/lable.js') }}" type="text/javascript"></script>
{% endblock %}

{% block body %}

    <h1>Waren </h1>
    </div>
    </header>
    <nav class="ym-hlist">


        <ul >
            <li>
                <a href="{{ path('BSData_product_new') }}">
                    Neus Produkt
                </a>
            </li>
            <li><a href="{{ path('BSData_mainmenu') }}" >zur√ºck</a></li>
        </ul>

    </nav>



    <div class="search">




        <ul>
            <li>
                Suche
            </li>
            <li>
                <label for="search_code">Code</label>
                <input type="text" id="search_code" class="search_code" value="" size="10" >
            </li>
            <li>
                <label for="search_name">Name</label>
                <input type="text" id="search_name" class="search_name" value="" size="20" >
            </li>
            <li>
                <label for="search_latein">Botanisch</label>
                <input type="text" id="search_latein" class="search_latein" value="" size="20" >
            </li>
        </ul>

    </div>


    <div >
        <table class="bordertable narrow">
            <thead>
            <tr>

                <th>{{ pagination.sortable('Code', 'a.article_no')|raw }}</th>
                <th>{{ pagination.sortable('Name', 'a.name')|raw }}</th>
                <th>{{ pagination.sortable('Botanish', 'a.name2')|raw }}</th>
                <th>Price</th>
                <th>Lager</th>



                <th>Actions</th>
            </tr>
            </thead>
            <tbody class="results">
            {% for entity in pagination %}
                <tr>


                    <td>{{ entity.articleno }}</td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.name2 }}</td>
                    <td>{{ entity.price|number_format(2, '.', ',') }} &euro;</td>
                    <td>{{ entity.stock }}</td>



                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('BSData_product_show', { 'id': entity.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('BSData_product_edit', { 'id': entity.id }) }}">edit</a>
                            </li>
                            <li>
                                <a href="{{ path('BSData_product_print', { 'id': entity.id ,'quantity' :1}) }}">print</a>
                            </li>


                        </ul>
                    </td>
                </tr>
            {% endfor %}

            <tr>
                <td colspan="6">
                    <div class="navigation">
                        {{ pagination.render()|raw }}
                    </div>
                </td>
            </tr>
            </tbody>
        </table>

    </div>

{% endblock %}